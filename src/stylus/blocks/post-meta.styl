.post-meta
  padding 18px 0
  margin-top 28px
  width 100%
  border-top 1px solid #efefef
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row

.post-meta__shares
.post-meta__likes
  width 70px
  margin-right 45px
  font-size 17px
  text-transform uppercase
  color #212121
  span
    font-size 27px
    font-weight 600
    display block

.post-meta__shares
  margin-right 52px

.post-meta__likes
  margin-right 77px

.post-meta__readers
  width 335px
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row
  flex-wrap wrap

.post-meta__link
  display block
  text-decoration none
  width 44px
  height 44px
  margin-top 3px
  margin-right 3px
  border-radius 5px

.post-meta__link
  img
    width 100%
    height auto
