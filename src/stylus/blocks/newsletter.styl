.newsletter
  box-sizing border-box
  width 225px
  margin-right 27px
  padding 16px 20px
  background-color #eef2f5

.newsletter__title
  color #212121
  text-transform uppercase
  font-size 28px
  margin 0
  margin-bottom 5px
  font-weight 600

.newsletter__text
  color #7a7a7a
  margin-top 0
  margin-bottom 13px
  font-size 17px
  line-height 18px

.newsletter__btn
  display block
  text-align center
  width 108px
  max-width 180px
  padding 8px
  box-sizing border-box
  text-decoration none
  font-size 14px
  color #000000
  border 1px solid #040404
  font-weight 700
