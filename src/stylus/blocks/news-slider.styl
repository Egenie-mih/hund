.news-slider
  background-color #a48157
  margin 0 auto
  position relative
.news-slider::after
  content ''
  position absolute
  bottom 0
  left 0
  display block
  width 100%
  z-index 101
  height 15px
  background linear-gradient(to top, rgba(0,0,0,.1) 0%, rgba(0,0,0,0) 100%)

.news-slider__controls
  button
    font-size 0
    position absolute
    display block
    z-index 101
    margin 0
    width 12px
    height 41px
    padding 10px
    top 0
    bottom 0
    margin auto 0
    background-color transparent
    border 0
    background-image url(../img/arrow.png)
    background-repeat no-repeat
    cursor pointer
.news-slider__prev
  left 50%
  transform translate(-492px,-50%)
.news-slider__next
  right 50%
  transform translate(482px,-50%) rotate(180deg)

.news-slider__item
  position relative
  img
    display block
    width 100%
    height 435px

.news-slider__block
  position absolute
  z-index 100
  width 700px
  padding 0 40px
  top 89px
  left 50%
  transform translate(-473px,0px)

.news-slider__tag
  display block
  color #e8c907
  font-size 58px
  line-height 47px
  margin 0
  text-transform uppercase
  font-weight 700

.news-slider__title
  margin-top 0
  margin-bottom 13px
  display block
  color #ffffff
  font-size 90px
  line-height 70px
  text-transform uppercase
  font-weight 700
  letter-spacing: -1.9px

.news-slider__btn
  display block
  text-align center
  width 215px
  padding 11px
  box-sizing border-box
  text-decoration none
  font-size 34px
  color #ffffff
  border 3px solid #e6a903
  font-weight 700
