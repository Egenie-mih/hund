.page-header
  border-top 2px solid #e27e1d
  border-width 2px 0px 0px 0px
  border-style solid
  border-image -webkit-linear-gradient(left, #e27e1d 0%, #e27e1d 50%, #34d8a6 50%, #34d8a6 100%) 1
  background-image border-image -webkit-linear-gradient(left, #e27e1d 0%, #e27e1d 50%, #34d8a6 50%, #34d8a6 100%) 1
  background-image border-image -o-linear-gradient(left, #e27e1d 0%, #e27e1d 50%, #34d8a6 50%, #34d8a6 100%) 1
  background-image border-image linear-gradient(to right, #e27e1d 0%, #e27e1d 50%, #34d8a6 50%, #34d8a6 100%) 1
  &::after
    content ''
    position absolute
    top 0px
    left 0
    right 0
    width 676px
    height 2px
    margin 0 auto
    background linear-gradient(to right, #e27e1d 0px, #e27e1d 152px, #e5a100 152px, #e5a100 289px, #e8c907 289px, #e8c907 418px, #bad121 418px, #bad121 548px, #34d8a6 548px)

.page-header__top-header
  width 1340px
  margin 0 auto
  padding 0px 30px 40px
  background-image url("../img/dog-legs.jpg")
  background-position 643px 0px
  background-repeat no-repeat
  position relative

.page-header__container
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row

.page-header__menu
  background -webkit-linear-gradient(to left, #34d8a6 0%, #34d8a6 50%, #e27e1d 50%, #e27e1d 100%)
  background linear-gradient(to left, #34d8a6 0%, #34d8a6 50%, #e27e1d 50%, #e27e1d 100%)
  position relative
  &::before
    content ''
    position absolute
    top 1px
    left 0
    width 100%
    height 1px
    background-color rgba(255, 255, 255, 0.3)

.page-header__sticker
  position absolute
  width 229px
  height 228px
  margin auto
  box-sizing border-box
  text-align center
  right 222px
  top 90px
  z-index 3
  border-radius 50%
  padding 50px 10px 25px
  font-size 62px
  line-height 50px
  color #aeaeae
  text-transform uppercase
  font-family "Din Condensed", "Arial", sans-serif
  font-weight 700
  background-image url("../img/best-dog.png")
  background-color #363636
  background-repeat no-repeat
  background-size 48px 29px
  background-position 117px 18px

.page-header__animal
  color #ffffff
  display block
  font-size 54px

.page-header__year
  color #fdb11f
  display block
