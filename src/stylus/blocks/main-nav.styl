.main-nav
  width 928px
  box-sizing border-box
  padding-right 250px
  margin 0 auto
  font-family 'Din Condensed', 'Arial', sans-serif

.main-nav__list
  margin 0
  padding 0
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row
  flex-wrap wrap
  counter-reset item

.main-nav__item
  list-style-type none

.main-nav__link
  position relative
  max-width 155px
  font-size 20px
  line-height 20px
  font-weight 400
  display block
  padding 10px 60px 6px 13px
  box-sizing border-box
  color #2f2f2f
  text-decoration none
  text-transform uppercase
  background-repeat no-repeat
  background-position 90% center
  &--breeds
    background-color #e27e1d
    background-image url("../img/menu-1.png")
  &--favorites
    background-color #e5a100
    background-image url("../img/menu-2.png")
  &--shop
    background-color #e8c907
    background-image url("../img/menu-3.png")
  &--breeders
    background-color #bad121
    background-image url("../img/menu-4.png")
  &--societies
    background-color #34d8a6
    background-image url("../img/menu-5.png")
.main-nav__link::after
  display block
  content counter(item, decimal-leading-zero)
  counter-increment item
  font-size 25px
  color #ffffff
  opacity .6
  font-weight 700
  margin-top 5px
.main-nav__link:hover::before
  content ''
  position absolute
  left 0
  bottom 0
  width 100%
  height 80%
  display block
  background linear-gradient(to top, rgba(0,0,0,.6) 0%, rgba(0,0,0,0) 100%)
